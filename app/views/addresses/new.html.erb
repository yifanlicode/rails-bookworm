<!-- app/views/addresses/new.html.erb -->
<div class="container custom-container">
  <div class="row">
    <div class="col-md-7">
      <h2>Add a new address</h2>
      <%= form_with(model: @address, url: addresses_path, class: "mt-3") do |form| %>

      <div class="mb-3">
          <%= form.label :city, class: "form-label" %>
          <%= form.text_field :city, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= form.label :full_name, class: "form-label" %>
          <%= form.text_field :full_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :phone_number, class: "form-label" %>
          <%= form.text_field :phone_number, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :address_line_1, class: "form-label"%>
          <%= form.text_field :address_line_1, class: "form-control", place_holder: "1234 Main St" %>
        </div>

        <div class="mb-3">
          <%= form.label :address_line_2, class: "form-label" %>
          <%= form.text_field :address_line_2, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :province_id, class: "form-label" %>
          <%= form.collection_select :province_id, Province.all, :id, :name, { prompt: "-" }, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :postal_code, class: "form-label" %>
          <%= form.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.submit "Add address", class: "custom-btn" %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-5">
      <!-- Previous Addresses list -->
        <h2>Previous Addresses</h2>
        <ul class="list-group">
            <% @user_addresses.each do |address| %>
                <li class="list-group-item">
                <%= address.full_name %><br>
                <%= address.address_line_1 %><br>
                <%= address.address_line_2 %><br>
                <%= address.city %>, <%= address.province.name %><br>
                <%= address.postal_code %><br>
                <%= address.phone_number %><br>
                </li>
            <% end %>
        </ul>
    </div>
  </div>
</div>
