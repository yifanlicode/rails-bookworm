<!-- app/views/shared/_product_card.html.erb -->
<div class="col">
  <div class="card h-100">
    <div class="card-body">
      <%= link_to product_path(product) do %>
         <% if product.image.attached? %>
          <%= image_tag url_for(product.image), class: "img-fluid mb-4", alt: "Book Cover" %>
         <% else %>
          <%= image_tag(product.thumbnail, class: "img-fluid thumbnail-img", alt: "Book Cover Thumbnail") %>
         <% end %>
      <% end %>
      <h5 class="card-title"><%= link_to product.title, product_path(product) %></h5>
      <p class="card-text">Author: <%= product.authors %></p>
      <p class="card-text">Price: <%= number_to_currency(product.price) %></p>
      <p class="card-text">Average Rating: <%= product.average_rating %></p>
    </div>
  </div>
</div>
