<!-- app/views/products/index.html.erb -->

<div class="container mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">

      <div class="sidebar">
    
        <ul class="list-group">
        <li class="list-group-item"> <%= link_to 'All Products', products_path, class:"custom-link" %> </li>
        <li class="list-group-item"> <%= link_to 'On Sale', products_path(filter: 'on_sale'), class:"custom-link"  %> </li>
        <li class="list-group-item"> <%= link_to 'New Arrivals', products_path(filter: 'new_products'), class:"custom-link"  %> </li>
        <li class="list-group-item"> <%= link_to 'Recently Updated', products_path(filter: 'recently_updated'), class:"custom-link"  %> </li>
        
        </ul>
      </div>

      <br>
      <br>
      <div class="sidebar">
       
    <%# <h3>Featured Categories</h3> %>
    
        <ul class="list-group">
         <% @sidebar_categories.each do |category| %>
            <li class="list-group-item <%= 'active' if current_page?(category_path(category.id)) %>">
              <%= link_to category.name, category_path(category.id), class: "custom-link" %>
            </li>
          <% end %>
        </ul>
      </div>


    </div>


   
 

