<!-- app/views/products/index.html.erb -->

<div class="container mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">

      <div class="sidebar">
    
        <ul class="list-group">
        <li class="list-group-item"> <%= link_to 'All Products', products_path %> </li>
        <li class="list-group-item"> <%= link_to 'On Sale', products_path(filter: 'on_sale') %> </li>
        <li class="list-group-item"> <%= link_to 'New Arrivals', products_path(filter: 'new_products') %> </li>
        <li class="list-group-item"> <%= link_to 'Recently Updated', products_path(filter: 'recently_updated') %> </li>
        
        </ul>
      </div>

      <br>
      <br>
      <div class="sidebar">
        <%# <h3>Featured Categories</h3> %>
    
        <ul class="list-group">
          <% @sidebar_categories.each do |category| %>
            <li class="list-group-item">
              <%= link_to category.name, category_path(category.id) %>
            </li>
          <% end %>
        </ul>
      </div>


    </div>


   
 

