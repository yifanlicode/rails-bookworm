<%# app/views/orders/_address_form.html.erb %>

<div class="mb-4">
  <h3>1. Shipping Addresses</h3>

  <% if @user_addresses.any? %>
    <ul class="list-group">
      <% @user_addresses.each do |address| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= address.full_address %></span>
          <%= link_to "Shipping to this address", new_order_path(selected_address_id: address.id), class: "btn  btn-sm" %>
        </li> 
      <% end %>
    </ul>
    <%= link_to "Add New Address", new_address_path, class: "btn  mt-3" %>
  <% else %>
    <p class="mt-3"> Please fill in your shipping address.</p>
    <%= link_to "Add New Address", new_address_path, class: "btn mt-2" %>
  <% end %>
</div>
