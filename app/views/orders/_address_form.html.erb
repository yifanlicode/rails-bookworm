      <h3 class="mb-4">1. Shipping Addresses</h3>
      <% if @user_addresses.any? %>
        <ul class="list-group mb-3">
          <% @user_addresses.each do |address| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= address.full_address %></span>
              <%= link_to "Shipping to this address", new_order_path(selected_address_id: address.id), class: "btn btn-sm btn-light" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mb-3">Please fill in your shipping address.</p>
      <% end %>
      <%= link_to "Add New Address", new_address_path, class: "btn btn-sm btn-outline-secondary" %>
