<div class="container">

  <h1 class="mt-4">Checkout</h1>

  <div class="row mt-4">
    <div class="col-md-6">
      <%= render "address_form" %>
      <%= render "payment_form" %>
    </div>
    
    <div class="col-md-6">
      <h3>3.Items and Shipping</h3>
      <% if @cart.cart_items.empty? %>
        <p>Your cart is empty.</p>
      <% else %>
        <table class="table">
          <thead>
            <tr>
              <th>Book Title</th>
              <th>Quantity</th>
              <th>Per Price</th>
            </tr>
          </thead>

          <tbody>
            <% @cart.cart_items.each do |cart_item| %>
              <tr>
                <td><%= link_to cart_item.product.title, cart_item.product %></td>
                <td>
                  <%= form_tag update_item_quantity_cart_path(@cart), method: :put, class: "d-flex align-items-center" do %>
                    <%= number_field_tag 'quantity', cart_item.quantity, min: 1, class: "form-control me-2" %>
                    <%= hidden_field_tag 'product_id', cart_item.product.id %>
                    <%= submit_tag "Update", class: "btn btn-sm btn-primary" %>
                  <% end %>
                </td>
                <td><%= number_to_currency(cart_item.product.price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <p class="mb-0">Total before tax: <%= number_to_currency(@cart.subtotal) %></p>

        <% if @tax_rates %>
          <p>Estimated PST: <%= number_to_currency(@cart.subtotal * @tax_rates.pst) %></p>
          <p>Estimated GST: <%= number_to_currency(@cart.subtotal * @tax_rates.gst) %></p>
          <p>Estimated HST: <%= number_to_currency(@cart.subtotal * @tax_rates.hst) %></p>
        <% end %>

        <% if @tax_rates %>
          <p class="fw-bold">Order Total: <%= number_to_currency(@order_total) %></p>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
